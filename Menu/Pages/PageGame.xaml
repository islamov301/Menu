<Page x:Class="Menu.Pages.PageGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Menu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageGame">

    <Grid Background="Black">
        <ListView  ScrollViewer.HorizontalScrollBarVisibility="Disabled"  x:Name="ListGame" Background="Transparent" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="170" Margin=" 5 5 5 5">
                        <Border CornerRadius="5" Width="50" Height="50">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding Image}"></ImageBrush>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="{Binding NameItem}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="20"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel></WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</Page>
